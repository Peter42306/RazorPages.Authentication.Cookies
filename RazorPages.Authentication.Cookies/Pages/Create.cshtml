@page
@model RazorPages.Authentication.Cookies.Pages.CreateModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Авторизация</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div>
            @if (Request.Cookies["login"] == null)
            {
                @Html.ValidationSummary(true, "")
                <div>
                    @Html.LabelFor(model => model.login.UserName)
                    <div>
                        @Html.EditorFor(model => model.login.UserName)
                        @Html.ValidationMessageFor(model => model.login.UserName, "")
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.login.Password)
                    <div>
                        @Html.PasswordFor(model => model.login.Password)
                        @Html.ValidationMessageFor(model => model.login.Password, "")
                    </div>
                </div>

                <div>
                    <div>
                        <input type="submit" value="Войти" />
                    </div>
                </div>
            }
            else
            {
                <div>
                    <div>
                        Вводить логин и пароль уже не нужно!
                    </div>
                    <a href="Index">На главную страницу</a>
                </div>
            }
        </div>
    }
</body>
</html>
