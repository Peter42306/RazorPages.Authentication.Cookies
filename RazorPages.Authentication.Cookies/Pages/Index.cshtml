@page
@model IndexModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Авторизация</title>
</head>
<body>
    @{
        // Отображение приветственного сообщения и значения куки "login"
        <div>
            Здравствуйте, @Request.Cookies["login"]
        </div>
    }

    <form method="post">
        @* Кнопка для выхода из системы *@
        <div>
            <input type="submit" value="Выйти" />
        </div>
    </form>

    @* Ссылка для перехода на страницу авторизации *@
    <div>
        <a href="Create">На страницу авторизации</a>
    </div>
</body>
</html>

